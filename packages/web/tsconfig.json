{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["./src"]
}
